{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task Document Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the task"
    },
    "details": {
      "type": "string",
      "description": "Details about the task"
    },
    "completed": {
      "type": "boolean",
      "description": "Status of task completion"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the task was created"
    },
    "user": {
      "type": "string",
      "description": "Reference to the user document (user UID)"
    }
  },
  "required": ["title", "completed", "created", "user"]
}
